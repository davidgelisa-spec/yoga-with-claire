---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/sections/PageHero.astro';
import Button from '../../components/ui/Button.astro';
import heroImg from '../../assets/images/yoga with claire 3.jpg';

---

<BaseLayout title="Timetable" description="Yoga With Claire — weekly class on Tuesday evenings, 7:00–8:15 pm at Mudeford Infants School. All levels welcome.">
  <PageHero title="Timetable" subtitle="One class a week — come along and join us." image={heroImg} />

  <!-- Timetable -->
  <section class="bg-bg py-16 sm:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-lg mx-auto bg-white rounded-xl shadow-sm p-8 sm:p-10 text-center">
        <p class="text-accent font-medium text-sm uppercase tracking-wide">Tuesday</p>
        <h2 class="font-heading text-2xl sm:text-3xl font-semibold text-primary mt-2">Yoga With Claire</h2>
        <div class="w-10 h-px bg-accent mx-auto my-4"></div>
        <p class="text-text text-lg font-medium">7:00–8:15 pm</p>
        <p class="text-text-light mt-2">Mudeford Infants School, Queens Road, Christchurch, BH23 3HH</p>
        <p class="text-text-light mt-4 leading-relaxed">A friendly, mixed-level class for all abilities. Breath-led movement, gentle flow, and strength-building sequences.</p>
      </div>

      <p class="mt-8 text-text-light text-center text-sm">
        Timetable subject to change. Follow us on social media for updates.
      </p>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-primary py-16 sm:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-heading text-3xl sm:text-4xl font-semibold text-white mb-4">
        Ready to book?
      </h2>
      <p class="text-primary-light text-lg mb-8">
        Drop-in or grab a class block — whatever suits you best.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <Button href="/prices/" size="lg">See Prices</Button>
        <Button href="/contact/" variant="secondary" size="lg">Get in Touch</Button>
      </div>
    </div>
  </section>
</BaseLayout>
