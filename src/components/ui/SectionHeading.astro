---
interface Props {
  subtitle?: string;
  align?: 'left' | 'center';
}

const { subtitle, align = 'center' } = Astro.props;
---

<div class:list={[align === 'center' && 'text-center', 'mb-10 sm:mb-12']}>
  <h2 class="font-heading text-3xl sm:text-4xl font-semibold text-primary">
    <slot />
  </h2>
  {subtitle && (
    <p class="mt-3 text-text-light text-lg max-w-2xl" class:list={[align === 'center' && 'mx-auto']}>
      {subtitle}
    </p>
  )}
</div>
