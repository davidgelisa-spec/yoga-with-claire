---
interface Props {
  subtitle?: string;
  align?: 'left' | 'center';
}

const { subtitle, align = 'center' } = Astro.props;
---

<div class:list={[align === 'center' && 'text-center', 'mb-12 sm:mb-16']}>
  <h2 class="font-heading text-4xl sm:text-5xl font-semibold text-primary tracking-tight">
    <slot />
  </h2>
  {subtitle && (
    <p class="mt-4 text-text-light text-lg max-w-2xl leading-relaxed" class:list={[align === 'center' && 'mx-auto']}>
      {subtitle}
    </p>
  )}
</div>
