---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { href, variant = 'primary', size = 'md', class: className } = Astro.props;

const baseClasses = 'inline-block font-medium tracking-wide transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary text-center';

const variantClasses = {
  primary: 'bg-accent text-white hover:bg-accent-dark shadow-sm hover:shadow-md',
  secondary: 'bg-secondary text-text hover:bg-secondary-dark',
  outline: 'border border-primary/40 text-primary hover:bg-primary hover:text-white',
};

const sizeClasses = {
  sm: 'px-5 py-2 text-sm rounded-md',
  md: 'px-7 py-3 text-sm uppercase tracking-widest rounded-md',
  lg: 'px-9 py-4 text-sm uppercase tracking-widest rounded-md',
};

const classes = [baseClasses, variantClasses[variant], sizeClasses[size], className].filter(Boolean).join(' ');

const Tag = href ? 'a' : 'button';
---

<Tag href={href} class={classes}>
  <slot />
</Tag>
