---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import { siteConfig } from '../../data/siteConfig';
import heroImage from '../../assets/images/yogawithclairehero2.png';
---

<section class="relative overflow-hidden">
  <!-- Background image -->
  <Image
    src={heroImage}
    alt=""
    class="absolute inset-0 w-full h-full object-cover"
    widths={[640, 1024, 1536]}
    sizes="100vw"
  />
  <!-- Overlay -->
  <div class="absolute inset-0 bg-primary-dark/60"></div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32 lg:py-40">
    <div class="max-w-3xl">
      <p class="text-secondary font-medium text-sm sm:text-base uppercase tracking-wide mb-4">
        Welcome to {siteConfig.name}
      </p>
      <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight">
        Breath-led movement for a calm, steady mind
      </h1>
      <p class="mt-6 text-secondary/90 text-lg sm:text-xl leading-relaxed max-w-2xl">
        Friendly, accessible yoga classes suitable for complete beginners through to those returning to the mat. Build sustainable strength, improve mobility, and find your calm.
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        <Button href="/classes/" size="lg">View Classes</Button>
        <Button href="/timetable/" variant="secondary" size="lg">See Timetable</Button>
      </div>
    </div>
  </div>
</section>
