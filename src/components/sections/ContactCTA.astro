---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import ctaImage from '../../assets/images/yogawithclairehero1.png';
---

<section class="relative overflow-hidden">
  <!-- Background image -->
  <Image
    src={ctaImage}
    alt=""
    class="absolute inset-0 w-full h-full object-cover scale-[1.35]"
    widths={[640, 1024, 1536]}
    sizes="100vw"
    loading="lazy"
    data-parallax
  />
  <div class="absolute inset-0 bg-gradient-to-b from-primary-dark/65 to-primary-dark/80"></div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-32 text-center">
    <p class="text-white/60 text-xs uppercase tracking-[0.2em] font-medium mb-4">Your Journey Starts Here</p>
    <h2 class="font-heading text-4xl sm:text-5xl font-semibold text-white tracking-tight mb-6">
      Ready to get started?
    </h2>
    <p class="text-white/70 text-lg mb-10 max-w-xl mx-auto leading-relaxed">
      Whether you're brand new to yoga or returning after a break, you're welcome here.
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <Button href="/contact/" variant="primary" size="lg">Get in Touch</Button>
      <Button href="/timetable/" variant="outline" size="lg" class="border-white/40 text-white hover:bg-white hover:text-primary">View Timetable</Button>
    </div>
  </div>
</section>
