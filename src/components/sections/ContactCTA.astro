---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import { siteConfig } from '../../data/siteConfig';
import ctaImage from '../../assets/images/yogawithclairehero1.png';
---

<section class="relative overflow-hidden">
  <!-- Background image -->
  <Image
    src={ctaImage}
    alt=""
    class="absolute inset-0 w-full h-full object-cover"
    widths={[640, 1024, 1536]}
    sizes="100vw"
    loading="lazy"
  />
  <div class="absolute inset-0 bg-primary-dark/70"></div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24 text-center">
    <h2 class="font-heading text-3xl sm:text-4xl font-semibold text-white mb-4">
      Ready to get started?
    </h2>
    <p class="text-secondary/80 text-lg mb-8 max-w-2xl mx-auto">
      Whether you're brand new to yoga or returning after a break, you're welcome here. Get in touch or come along to a class.
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <Button href="/contact/" variant="primary" size="lg">Get in Touch</Button>
      <Button href="/timetable/" variant="secondary" size="lg">View Timetable</Button>
    </div>
  </div>
</section>
