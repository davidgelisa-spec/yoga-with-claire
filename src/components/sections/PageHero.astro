---
import { Image } from 'astro:assets';
import heroDefault from '../../assets/images/yogawithclairehero.png';

interface Props {
  title: string;
  subtitle?: string;
  image?: ImageMetadata;
}

const { title, subtitle, image = heroDefault } = Astro.props;
---

<section class="relative overflow-hidden">
  <Image
    src={image}
    alt=""
    class="absolute inset-0 w-full h-full object-cover scale-[1.2]"
    widths={[640, 1024, 1536]}
    sizes="100vw"
    loading="eager"
    data-parallax
  />
  <div class="absolute inset-0 bg-primary-dark/70"></div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-28 text-center">
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-semibold text-white tracking-tight">
      {title}
    </h1>
    {subtitle && (
      <p class="mt-4 text-white/70 text-lg max-w-2xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}
  </div>
</section>
